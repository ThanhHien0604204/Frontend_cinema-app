<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <ImageView
        android:id="@+id/imBack"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="30dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/back" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_lock_reset"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:tint="#FF6B6B"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đặt lại mật khẩu"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColorHint="@color/white"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhập mã token và mật khẩu mới để hoàn tất"
                    android:textSize="14sp"
                    android:textColor="@color/gray_light"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Token Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Mã OTP"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:startIconDrawable="@drawable/ic_key"
                app:startIconTint="@color/purple_700"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                app:helperText="Nhập mã OTP từ email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="@android:color/white"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>
            <!-- New Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Mật khẩu mới"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/purple_700"
                app:startIconTint="@color/purple_700"
                app:endIconMode="password_toggle"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                app:helperText="Mật khẩu phải có ít nhất 6 ký tự">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="Xác nhận mật khẩu"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/purple_700"
                app:startIconTint="@color/purple_700"
                app:endIconMode="password_toggle"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                app:helperText="Nhập lại mật khẩu để xác nhận">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:inputType="textPassword"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Reset Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetPassword"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Đặt lại mật khẩu"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="25dp"
                app:backgroundTint="@color/purple_700"
                app:icon="@drawable/ic_reset"
                app:iconTint="@android:color/white"
                app:iconGravity="start"
                app:iconPadding="1dp"
                android:layout_marginBottom="16dp" />

            <!-- Progress Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light"
                android:layout_marginVertical="16dp" />

            <!-- Back to Login -->
            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="← Quay lại đăng nhập"
                android:textSize="14sp"
                android:textColor="@color/purple_200"
                android:drawableStart="@drawable/ic_arrow_left"
                android:drawableTint="@color/purple_200"
                android:drawablePadding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>