<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginTop="10dp">

    <!-- Khung trái: Avatar + Tên + Thời gian -->
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:background="@drawable/circle_shape"
            android:scaleType="centerCrop"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bùi **********"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025/08/27"
            android:textSize="12sp"
            android:textColor="#AAAAAA"
            android:gravity="center"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Khung phải: Nội dung + Đánh giá + Nút yêu thích -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <!-- RatingBar với ngôi sao dễ thương -->

        <!-- Nội dung bình luận -->

        <RatingBar
            android:id="@+id/user_rating"
            style="@style/RatingBarTint"
            android:maxHeight="50dp"
            android:minHeight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="4dp"
                android:text="Cực kì đẳng cấp trời ơi!!! 😭🥺💖 quá xứng đáng"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="#FF4081"
                android:padding="6dp"
                android:text="Xóa"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Nút yêu thích -->
    </LinearLayout>
</LinearLayout>