<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Nút quay lại -->
    <ImageView
        android:id="@+id/imBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Các trường nhập liệu -->
    <EditText
        android:id="@+id/edPhim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tên phim"
        app:layout_constraintTop_toBottomOf="@id/imBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/edThoiLuong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Thời lượng (phút)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/edPhim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/edKhoiChieu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ngày khởi chiếu (dd-MM-yyyy)"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/edThoiLuong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- MultiSelect Spinner -->
    <LinearLayout
        android:id="@+id/multiSelectGenres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/edKhoiChieu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">
        <include layout="@layout/layout_multi_select_spinner" />
    </LinearLayout>

    <EditText
        android:id="@+id/edAnhphim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="URL ảnh phim"
        app:layout_constraintTop_toBottomOf="@id/multiSelectGenres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/edTrailer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="URL trailer"
        app:layout_constraintTop_toBottomOf="@id/edAnhphim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/edMoTa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mô tả"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/edTrailer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/edMoTa"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Nút hành động -->
    <Button
        android:id="@+id/btThemAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btSuaAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toEndOf="@id/btThemAdmin"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btXoaAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toEndOf="@id/btSuaAdmin"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>