<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp">

    <!-- Nội dung chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@android:color/holo_purple"
            android:paddingStart="30dp"
            android:paddingTop="40dp"
            android:text="QUẢN LÝ RẠP CHIẾU PHIM"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_purple"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imBack"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/holo_purple"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="374dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:text="CHI TIẾT TÀI KHOẢN    "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/taikhoan" />

        <EditText
            android:id="@+id/editUserName"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_rounded"
            android:ems="10"
            android:layout_margin="20dp"
            android:hint="Tên User..."
            android:inputType="text" />
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_rounded"
            android:ems="10"
            android:layout_margin="20dp"
            android:hint="Email tài khoản..."
            android:inputType="text" />
        <Spinner
            android:id="@+id/spinnerUserRole"
            android:layout_width="375dp"
            android:layout_margin="20dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/editMatKhau"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_rounded"
            android:ems="10"
            android:layout_margin="20dp"
            android:inputType="textPassword"
            android:hint="Mật khẩu" />
        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btThemAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Thêm" />

            <Button
                android:id="@+id/btSuaAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Sửa" />

            <Button
                android:id="@+id/btXoaAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Xóa" />
        </LinearLayout>

        <!-- RecyclerView hiển thị danh sách phim -->
        <!-- Container cho Fragment -->

    </LinearLayout>


    <!-- Navigation Drawer -->

</androidx.drawerlayout.widget.DrawerLayout>